{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"checkJs": true,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext",
			"ES6",
			"ES2016",
			"ES2017"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "build",
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5",
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"build",
		"node_modules",
		"src/**/*.test.ts",
		"src/**/*.test.tsx"
	]
}